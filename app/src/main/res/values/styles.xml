<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/accent_three</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="regular_title" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_three</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="medium_title" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="semi_bold_title" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="product_title" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="product_price" parent="Theme.AppCompat">
        <item name="android:textColor">@color/accent_one</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="body_text_light" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="support_text_regular" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_three</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="extra_small_text" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_three</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="previous_price_text" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_two</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="current_price" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="credit_price" parent="Theme.AppCompat">
        <item name="android:textColor">@color/neutral_three</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="text_button_white" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="text_link" parent="Theme.AppCompat">
        <item name="android:textColor">@color/accent_two</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

</resources>
